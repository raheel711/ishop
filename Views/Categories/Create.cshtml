@model ishop.Models.Category

@{
    ViewData["Title"] = "Create";
}




<div class="card o-hidden border-0 shadow-lg my-5 col-lg-8">
    <div class="card-body p-0">
        <!-- Nested Row within Card Body -->
        <div class="row">
            <div class="col-lg-12">
                <div class="p-5">
                    <div class="text-center">
                        <h1 class="h4 text-gray-900 mb-4 alert alert-primary">Add New Category!!!!</h1>
                    </div>
                    

                    <form class="user" asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="CatName" class="control-label"></label>
                            <input asp-for="CatName" class="form-control" />
                            <span asp-validation-for="CatName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CatPic" class="control-label"></label>
                            <input asp-for="CatPic" class="form-control" />
                            <span asp-validation-for="CatPic" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CatKeywords" class="control-label"></label>
                            <input asp-for="CatKeywords" class="form-control" />
                            <span asp-validation-for="CatKeywords" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Add New Category" class="btn btn-primary col-md-12" />
                        </div>
                    </form>

                    <hr>
                    <div class="text-center">
                        <a class="small" asp-action="Index">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
        <div>
           
        </div>

    </div>
</div>



