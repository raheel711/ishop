@model ishop.Models.IshopCategory

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Select2 -->
<link rel="stylesheet" href="~/Dashboard/bower_components/select2/dist/css/select2.min.css">
<link rel="stylesheet" href="~/Dashboard/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.min.css">



<section class="content-header">
    <h1>
        Categories
        <small class="text-bold text-success">3</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a asp-action="IndexCategory">Categories</a></li>
        <li class="active">Create new Category</li>
    </ol>
</section>

<section class="content">
    <div class="row">

        <div class="col-xs-12">

            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">
                        Create Category
                    </h3>
                </div>
                <div class="box-body">

                    @if (ViewBag.messageError != null) { 
                        <h2 class="alert alert-danger text-center">@ViewBag.messageError</h2>
                    }

                    <div class="category-form">
                        <form asp-action="CreateCategory" method="post" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="col-md-12">
                                <div class="form-group">
                                    <div class="form-group field-category-category_name required">
                                        <label class="control-label" for="category-category_name">Category Name</label>
                                        <input type="text" asp-for="CatName" class="form-control" maxlength="255" aria-required="true">
                                        <span asp-validation-for="CatName" class="text-danger"></span>

                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <div class="form-group field-editor1">
                                        <label class="control-label" for="editor1">Category Short Detail</label>
                                        <textarea asp-for="CatShortDetail" rows="10" cols="80">
                                                                Category short Description
                                        </textarea>
                                        <span asp-validation-for="CatShortDetail" class="text-danger"></span>

                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <div class="form-group field-editor1">
                                        <label class="control-label" for="editor1">Category Description</label>
                                        <textarea asp-for="CatDetail" rows="10" cols="80">
                                                          Category Description
                                        </textarea>
                                        <span asp-validation-for="CatDetail" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="form-group">
                                    <div class="form-group field-category-meta_title required">
                                        <label class="control-label" for="category-meta_title">Meta Title</label>
                                        <input type="text" asp-for="CatMetaTitle" class="form-control" maxlength="255" aria-required="true">
                                        <span asp-validation-for="CatMetaTitle" class="text-danger"></span>

                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <div class="form-group field-category-meta_description required">
                                        <label class="control-label" for="category-meta_description">Meta Description</label>
                                        <textarea class="form-control" asp-for="CatMetaDescription" rows="6" aria-required="true"></textarea>
                                        <span asp-validation-for="CatMetaDescription" class="text-danger"></span>

                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <div class="form-group field-category-meta_keywords">
                                        <label class="control-label" for="category-meta_keywords">Meta Keywords</label>
                                        <input type="text" class="form-control" asp-for="CatMetaKeywords">
                                        <span asp-validation-for="CatMetaKeywords" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <div class="form-group field-category-status required">
                                        <label class="control-label" for="category-status">Status</label>
                                        <select class="form-control" asp-for="Status" aria-required="true">
                                            <option value="">Select Status</option>
                                            <option value="true">Yes</option>
                                            <option value="false">No</option>
                                        </select>
                                        <span asp-validation-for="Status" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <div class="form-group field-category-ismenu">
                                        <label class="control-label" for="category-ismenu">Is Menu</label>
                                        <select class="form-control" asp-for="ShowMenu">
                                            <option value="">Show In Menu</option>
                                            <option value="true">Yes</option>
                                            <option value="false">No</option>
                                        </select>
                                        <span asp-validation-for="ShowMenu" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <div class="form-group field-category-ishome">
                                        <label class="control-label" for="category-ishome">Is Home</label>
                                        <select class="form-control" asp-for="ShowHome">
                                            <option value="">Show On Home Page</option>
                                            <option value="true">Yes</option>
                                            <option value="false">No</option>
                                        </select>
                                        <span asp-validation-for="ShowHome" class="text-danger"></span>

                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <div class="form-group field-category-parent">
                                        <label class="control-label" asp-for="ParentId"></label>
                                        @{
                                            SelectList SL = new SelectList(ViewBag.cateorylist, "Id", "CatName");
                                        }
                                        @Html.DropDownList("ParentId", SL, "Select Parent Category", new { @class = "form-control" })

                                        <span asp-validation-for="ParentId" class="text-danger"></span>

                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <div class="form-group field-category-category_url">
                                        <label class="control-label" for="category-category_url">Category Url</label>
                                        <input type="text" class="form-control" maxlength="255" placeholder="Optional - Leave blank if you want to want to auto generate">

                                        <div class="help-block"></div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <div class="form-group field-category-google_category">
                                        <label class="control-label" for="category-google_category">Google Category</label>
                                        <input type="text" class="form-control" asp-for="GoogleCategory" placeholder="Optional- Google Category">
                                        <span asp-validation-for="GoogleCategory" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <div class="form-group field-category-category_image">
                                        <label class="control-label" for="category-category_image">Category featured Image</label>
                                        <input type="file" name="FeaturedImage" id="FeaturedImage">
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <div class="form-group field-category-category_image">
                                        <label class="control-label" for="category-category_image">Category Image 2</label>
                                        <input type="file" asp-for="CatPic2">
                                        <span asp-validation-for="CatPic2" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>


                            <div class="col-md-12">
                                <div class="form-group text-center ">
                                    <button type="submit" class="btn btn-success col-md-12">Create new Category</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>
</section>



