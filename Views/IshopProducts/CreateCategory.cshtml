@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <!-- Select2 -->
    <script src="~/Dashboard/bower_components/select2/dist/js/select2.full.min.js"></script>
    <!-- CK Editor -->
    <script src="~/Dashboard/bower_components/ckeditor/ckeditor.js"></script>
    <!-- Bootstrap WYSIHTML5 -->
    <script src="~/Dashboard/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.all.min.js"></script>
    <script>
        $(function () {
            // Replace the <textarea id="editor1"> with a CKEditor
            // instance, using default configuration.
            CKEDITOR.replace('CatShortDetail')
            CKEDITOR.replace('CatDetail')
            //bootstrap WYSIHTML5 - text editor
            $('.textarea').wysihtml5()


        })
    </script>
    <script>
        $(function () {
            //Initialize Select2 Elements
