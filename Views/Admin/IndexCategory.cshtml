@model IEnumerable<ishop.Models.IshopCategory>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}


<section class="content-header">
    <h1>
        Categories
        <small class="text-bold text-success">3</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">All Categories</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Categories</h3>
                </div>
                <!-- /.box-header -->

                <div class="box-body">

                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="exampleInputEmail1">Category Name</label>
                                <input type="text" class="form-control" placeholder="Enter Category">
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Parent Category</label>
                                <input type="email" class="form-control" placeholder="Enter Parent Category">
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Status</label>
                                <input type="email" class="form-control" placeholder="Enter Status">
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">

                                <button type="submit" class="btn btn-primary">Search</button> |
                                <button type="submit" class="btn btn-success">Reset</button>
                            </div>
                        </div>
                    </div>
                    <a asp-action="CreateCategory" class="btn btn-danger">Add new category</a>

                    <hr />

                    <table id="example1" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.ParentId)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CatName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CatFeatureImg)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Status)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Ranking)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.GoogleCategory)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.AddedDate) | By
                                </th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ParentId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CatName)
                                    </td>
                                    <td>
                                        <img src="~/Images/Categories/@Html.DisplayFor(modelItem => item.CatFeatureImg)" style="max-width:125px;"/>
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Status)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Ranking)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.GoogleCategory)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AddedDate) |
                                        @Html.DisplayFor(modelItem => item.AddedBy)
                                    </td>
                                    <td>
                                        <a asp-action="EditCategory" asp-route-id="@item.Id">Edit</a> |
                                        <a asp-action="DetailsCategory" asp-route-id="@item.Id">Details</a> |
                                        <a asp-action="DeleteCategory" asp-route-id="@item.Id">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->

        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(function () {
            $('#example1').DataTable();
        })
    </script>

}