@model ishop.Models.SystemUser
@{
    ViewData["Title"] = "Register";

}
@{Layout = "~/Views/Shared/_LayoutEmpty.cshtml";}

<div class="card o-hidden border-0 shadow-lg my-5">
    <div class="card-body p-0">
        <!-- Nested Row within Card Body -->
        <div class="row">
            <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
            <div class="col-lg-7">
                <div class="p-5">
                    <div class="text-center">
                        <h1 class="h4 text-gray-900 mb-4">Create an Account!</h1>
                    </div>
                    <form class="user" asp-action="Register">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <h1 class="alert alert-danger">@TempData["message"]</h1>
                        <div class="form-group row">
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                <input type="text" class="form-control form-control-user" asp-for="DisplayName" placeholder="Display Name" required>
                            </div>
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                <input type="text" class="form-control form-control-user" asp-for="SuEmail" placeholder="E-mail" required>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                <input type="text" class="form-control form-control-user" asp-for="SuUsername" placeholder="Username" required>
                            </div>
                            <div class="col-sm-6">
                                <input type="password" class="form-control form-control-user" asp-for="SuPassword" placeholder="Password" required>
                            </div>
                        </div>


                        <hr>

                        <div class="form-group row">
                            <div class="col-sm-6 mb-3 mb-sm-0">

                                <select class="form-control " asp-for="SuRole" placeholder="System Role">
                                    <option value="Staff">Staff</option>
                                    <option value="Admin">Admin</option>
                                </select>
                            </div>
                            <div class="col-sm-6">
                                <input type="file" class="form-control" asp-for="SuProfilePic" placeholder="DP">
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary btn-user btn-block">
                            Register Account
                        </button>
                        <hr>
                        <a href="index.html" class="btn btn-google btn-user btn-block">
                            <i class="fab fa-google fa-fw"></i> Register with Google
                        </a>
                        <a href="index.html" class="btn btn-facebook btn-user btn-block">
                            <i class="fab fa-facebook-f fa-fw"></i> Register with Facebook
                        </a>
                    </form>
                    <hr>
                    <div class="text-center">
                        <a class="small" href="/systemusers/forgetpassword/">Forgot Password?</a>
                    </div>
                    <div class="text-center">
                        <a class="small" href="/systemusers/login/">Already have an account? Login!</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

